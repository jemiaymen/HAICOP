@model HAICOP.Models.AcheteurDetail

<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="Marsed" asp-action="EditDetail" method="post" data-form="true">

        <input type="hidden" asp-for="ID" />

        <div class="grid__row">
            <div class="grid__column grid__column--3">
                <label asp-for="AcheteurID" class="form-field__label">المشتري العمومي</label>
            </div>
            <div class="grid__column grid__column--9">
                <select asp-for="AcheteurID" asp-items="ViewBag.AcheteurID">
                    <option value=""></option>
                </select>
                <span asp-validation-for="AcheteurID" class="text-danger"></span>
            </div>
        </div>


        <div class="grid__row">
            <div class="grid__column grid__column--1">
                <label asp-for="FirstLastName" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--3">
                <input asp-for="FirstLastName" class="form-field__input form-field__input--text" />
                <span asp-validation-for="FirstLastName" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--1">
                <label asp-for="Tel" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--3">
                <input asp-for="Tel" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--1">
                <label asp-for="Fax" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--3">
                <input asp-for="Fax" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Fax" class="text-danger"></span>
            </div>
        </div>

        <div class="form-field__button">
            <button class="button button--secondary" type="submit">تحيين</button>
        </div>


    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_SelectizeScript");
        <script>
            $("#AcheteurID").selectize();
        </script>
    }
}

@section Styles {
    @{ await Html.RenderPartialAsync("_SelectizeStyle");}
}

