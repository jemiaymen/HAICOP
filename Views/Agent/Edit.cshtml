@model HAICOP.Models.Agent


<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="Agent" asp-action="Edit" method="post">
        <input type="hidden" asp-for="ID" />

        <div class="grid__row">
            <div class="grid__column grid__column--3">
                <label for="CommissionID" class="form-field__label">الهيكل</label>
            </div>
            <div class="grid__column grid__column--9">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="CommissionID" asp-items="ViewBag.CommissionID" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
            </div>
        </div>



        <div class="grid__row">
            <div class="grid__column grid__column--3">
                <label asp-for="Name" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--9">
                <input asp-for="Name" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--3">
                <label asp-for="NameFr" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--9">
                <input asp-for="NameFr" class="form-field__input form-field__input--text" />
                <span asp-validation-for="NameFr" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--3">
                <label asp-for="IsPresident" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--3">
                <input asp-for="IsPresident" class="form-field__checkbox" />
                <span asp-validation-for="IsPresident" class="text-danger"></span>
            </div>
        </div>

        <div class="form-field__button">
            <button class="button button--primary" type="submit">إضافة</button>
        </div>


    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
