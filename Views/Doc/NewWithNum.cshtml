@model HAICOP.Models.NewDossier

<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="Doc" asp-action="NewWithNum" method="post" novalidate="" data-form="true" data-parsley-focus="none">

        <div class="grid__row">
            <div class="grid__column grid__column--12">
                <div class="m17-sectiontitle" data-component="m17-sectiontitle">
                    <h4 class="m17-sectiontitle__title  text__section-title">الملف</h4>
                </div>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="CommissionID" class="form-field__label">الهيكل</label>
            </div>
            <div class="grid__column grid__column--6">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="CommissionID" asp-items="ViewBag.CommissionID" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="Num" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--2">
                <input asp-for="Num" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Num" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row new-four">
            <div class="grid__column grid__column--2">
                <label asp-for="FournisseurID" class="form-field__label">العارض</label>
            </div>
            <div class="grid__column grid__column--10">
                <select asp-for="FournisseurID" asp-items="@ViewBag.FournisseurID" >
                    <option value=""></option>
                </select>
                <span asp-validation-for="FournisseurID" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Subject" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--5">
                <textarea asp-for="Subject" class="form-field__input form-field__input--text"></textarea>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="DocDate" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--3">
                <input asp-for="DocDate" class="form-field__input form-field__input--text" placeholder="dd/mm/yyyy" />
                <span asp-validation-for="DocDate" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="ProDate" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="ProDate" class="form-field__input form-field__input--text" placeholder="dd/mm/yyyy" />
                <span asp-validation-for="ProDate" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="EnterDate" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="EnterDate" class="form-field__input form-field__input--text" placeholder="dd/mm/yyyy" />
                <span asp-validation-for="EnterDate" class="text-danger"></span>
            </div> 
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Type" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<DossierType>()" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="Nature" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="Nature" asp-items="Html.GetEnumSelectList<DossierNature>()" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
                <span asp-validation-for="Nature" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="AcheteurID" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--10">
                <select asp-for="AcheteurID" asp-items="ViewBag.AcheteurID" >
                    <option value=""></option>
                </select>
                <span asp-validation-for="AcheteurID" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--12">
                <div class="m17-sectiontitle" data-component="m17-sectiontitle">
                    <h5 class="m17-sectiontitle__title  text__section-title">البريد</h5>
                </div>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Ref" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--2">
                <input asp-for="Ref" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Ref" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="OriginRef" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--2">
                <input asp-for="OriginRef" class="form-field__input form-field__input--text" />
                <span asp-validation-for="OriginRef" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="From" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--2">
                <input asp-for="From" class="form-field__input form-field__input--text" />
                <span asp-validation-for="From" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="MailType" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="MailType" asp-items="Html.GetEnumSelectList<MailType>()" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
                <span asp-validation-for="MailType" class="text-danger"></span>
            </div>

            <div class="grid__column grid__column--2">
                <label asp-for="MailNature" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="MailNature" asp-items="Html.GetEnumSelectList<MailNature>()" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
                    <span asp-validation-for="MailNature" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="MailDate" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="MailDate" class="form-field__input form-field__input--text" />
                <span asp-validation-for="MailDate" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="Desc" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <textarea asp-for="Desc" class="form-field__input form-field__input--text" > </textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
        </div>

        <div class="form-field__button">
            <button class="button button--primary" type="submit" >اظافة</button>
        </div>


    </form>

</div>

@section Scripts {
    @{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
        await Html.RenderPartialAsync("_SelectizeScript"); 
        <script>
            $(".new-four").hide();
            $("#AcheteurID").selectize();
            $("#FournisseurID").selectize();


            $("#CommissionID").change(function(){
                if( $("#CommissionID").val() == 3 || $("#CommissionID").val() == 4 || $("#CommissionID").val() == 8){
                    $(".new-four").show();
                }else{
                    $(".new-four").hide();
                }
            });

        </script>
    }
}

@section Styles {
    @{ await Html.RenderPartialAsync("_SelectizeStyle");}
}

