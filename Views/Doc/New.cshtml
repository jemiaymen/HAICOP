@model HAICOP.Models.NewDossier


@{
    ViewData["Title"] = "اظافة ملف";
    ViewData["SubMenu"] = "التصرف في الملفات";
}

<div class="panel panel-default">
    <div class="panel-heading">
         <h3 class="panel-title">@ViewData["Title"]</h3>
    </div>
    <div class="panel-body">
        <form asp-controller="Doc" asp-action="New"  method="post" enctype="multipart/form-data">
            <div class="form-horizontal">
               
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <h2>التفاصيل بالنسبة الملف</h2> 
                <hr />
                <div class="form-group">
                    <label asp-for="CommissionID" class="col-md-2 control-label"></label>
                    <div class="col-md-6">
                        <select asp-for="CommissionID" class ="form-control" asp-items="ViewBag.CommissionID">
                            <option value=""></option>
                        </select>
                    </div>
                    <label asp-for="Num" class="col-md-2 control-label"></label>
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Num, ViewBag.user.Auto ? (object)new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" }} : new { htmlAttributes = new { @class = "form-control" } })
                        <span asp-validation-for="Num" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Subject" class="col-md-2 control-label"></label>
                    <div class="col-md-5">
                        <textarea asp-for="Subject" class="form-control"></textarea>
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <label asp-for="DocDate" class="col-md-2 control-label"></label>
                    <div class="col-md-3">
                        <input asp-for="DocDate"  class="form-control" placeholder="dd/mm/yyyy" />
                        <span asp-validation-for="DocDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    
                    <label asp-for="ProDate" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <input asp-for="ProDate"  class="form-control" placeholder="dd/mm/yyyy" />
                        <span asp-validation-for="ProDate" class="text-danger" ></span>
                    </div>
                    <label asp-for="EnterDate" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <input asp-for="EnterDate" class="form-control" placeholder="dd/mm/yyyy" />
                        <span asp-validation-for="EnterDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <select asp-for="Type" asp-items="Html.GetEnumSelectList<DossierType>()">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <label asp-for="Nature" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <select asp-for="Nature" asp-items="Html.GetEnumSelectList<DossierNature>()">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="Nature" class="text-danger"></span>
                    </div>
                    
                </div>
                 
                <div class="form-group">
                    <label asp-for="AcheteurID" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="AcheteurID" asp-items="ViewBag.AcheteurID">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="AcheteurID" class="text-danger"></span>
                    </div>
                </div>

                
                <h2>التفاصيل بالنسبة للبريد</h2>
                <hr/>

                <div class="form-group">
                    <label asp-for="Ref" class="col-md-2 control-label"></label>
                    <div class="col-md-2">
                        <input asp-for="Ref" class="form-control" />
                        <span asp-validation-for="Ref" class="text-danger"></span>
                    </div>
                    <label asp-for="OriginRef" class="col-md-2 control-label"></label>
                    <div class="col-md-2">
                        <input asp-for="OriginRef" class="form-control" />
                        <span asp-validation-for="OriginRef" class="text-danger"></span>
                    </div>
                    <label asp-for="From" class="col-md-2 control-label"></label>
                    <div class="col-md-2">
                        <input asp-for="From" class="form-control" />
                        <span asp-validation-for="From" class="text-danger"></span>
                    </div>
                    
                </div>

                <div class="form-group">
                    <label asp-for="MailType" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <select asp-for="MailType" asp-items="Html.GetEnumSelectList<MailType>()">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="MailType" class="text-danger"></span>
                    </div>
                    <label asp-for="MailNature" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <select asp-for="MailNature" asp-items="Html.GetEnumSelectList<MailNature>()">
                            <option value=""></option>
                        </select>
                        <span asp-validation-for="MailNature" class="text-danger"></span>
                    </div>
                    
                </div>

                <div class="form-group">
                    <label asp-for="MailDate" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <input asp-for="MailDate" class="form-control" />
                        <span asp-validation-for="MailDate" class="text-danger"></span>
                    </div>
                    <label asp-for="Desc" class="col-md-2 control-label"></label>
                    <div class="col-md-4">
                        <textarea asp-for="Desc" class="form-control"></textarea>
                        <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>                   
                </div>

                <div class="form-group">
                    <label asp-for="Url" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Location" class="form-control" accept=".pdf" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>                 
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-9">
                        <button type="submit" class="btn ls-light-blue-btn">اظافة</button>
                    </div>
                </div>
            </div>  
        </form>                            
    </div>
</div>

@section Scripts {
    @{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
        await Html.RenderPartialAsync("_SelectizeScript"); 
        <script>
            $("#CommissionID").selectize();
            $("#Type").selectize();
            $("#Nature").selectize();
            $("#AcheteurID").selectize();
            $("#MailNature").selectize();
            $("#MailType").selectize();
        </script>
    }
}

@section Styles {
    @{ await Html.RenderPartialAsync("_SelectizeStyle");}
}

