@model HAICOP.Models.NewDossier


<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="Doc" asp-action="EditWithNum" method="post" novalidate="" data-form="true" data-parsley-focus="none">

        <input type="hidden" asp-for="ID" />
        <input type="hidden" name="OldAcheteurID" id="OldAcheteurID" value="@ViewData["OldAcheteurID"]" />

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="CommissionID" class="form-field__label">الهيكل</label>
            </div>
            <div class="grid__column grid__column--6">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="CommissionID" asp-items="ViewBag.CommissionID" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="Num" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--2">
                <input asp-for="Num" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Num" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Subject" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--5">
                <textarea asp-for="Subject" class="form-field__input form-field__input--text"></textarea>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="DocDate" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--3">
                <input asp-for="DocDate" class="form-field__input form-field__input--text" placeholder="dd/mm/yyyy" />
                <span asp-validation-for="DocDate" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="ProDate" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="ProDate" class="form-field__input form-field__input--text" placeholder="dd/mm/yyyy" />
                <span asp-validation-for="ProDate" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="EnterDate" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="EnterDate" class="form-field__input form-field__input--text" placeholder="dd/mm/yyyy" />
                <span asp-validation-for="EnterDate" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Type" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<DossierType>()" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="Nature" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="Nature" asp-items="Html.GetEnumSelectList<DossierNature>()" class="form-field__input form-field__input--select">
                        <option value=""></option>
                    </select>
                </span>
                <span asp-validation-for="Nature" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="AcheteurID" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--10">
                <select asp-for="AcheteurID" asp-items="ViewBag.AcheteurID">
                    <option value=""></option>
                </select>
                <span asp-validation-for="AcheteurID" class="text-danger"></span>
            </div>
        </div>


        <div class="form-field__button">
            <button class="button button--secondary" type="submit">تحيين</button>
        </div>


    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_SelectizeScript");
        <script>
            $("#AcheteurID").selectize();
        </script>
    }
}

@section Styles {
    @{ await Html.RenderPartialAsync("_SelectizeStyle");}
}


