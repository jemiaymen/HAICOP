@using System.Linq
@model IEnumerable<HAICOP.Models.Dossier>

@{
    ViewData["Title"] = "القائمة الجملية للملفات";
    ViewData["SubMenu"] = "التصرف في الملفات";
}

                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@ViewData["Title"]</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="ls-editable-table table-responsive ">
                                        <table class="table table-bordered table-striped ls-table" >
                                            <thead>
                                                <tr>
                                                    <th>
                                                        التعهد
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Num)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Subject)
                                                    </th>
                                                    <th>
                                                        الهيكل
                                                    </th>
                                                    <th> 
                                                        تحيين
                                                    </th>
                                                    <th>
                                                        طباعة
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model) {
                                                    <tr>
                                                        <td >
                                                            @Html.DisplayFor(mdelItem => item.ProDate)
                                                        </td>
                                                        <td >
                                                            @Html.DisplayFor(modelItem => item.Num)
                                                        </td>
                                                        <td >
                                                            @Html.DisplayFor(modelItem => item.Subject)
                                                        </td>
                                                        <td >
                                                            @Html.DisplayFor(modelItem => item.Commission.Lbl)
                                                        </td>
                                                        <td>
                                                            <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-pencil"></i></a> | 
                                                            <a asp-action="Mail" asp-route-id="@item.ID"><i class="fa fa-envelope"></i></a> 
                                                        </td>
                                                        <td>
                                                            <a asp-action="Boc"  asp-controller="Print" asp-route-id="@item.ID"><i class="fa fa-print"></i></a> 
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

@section Styles {
    @{ await Html.RenderPartialAsync("_TableStylePartial");}
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_TableScriptPatialWithout"); }
}



