@using System.Linq
@model IEnumerable<HAICOP.Models.Dossier>

@{
    ViewData["Title"] = "القائمة الجملية للملفات";
    ViewData["SubMenu"] = "التصرف في الملفات";
}
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@ViewData["Title"]</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="ls-editable-table table-responsive ">
                                        <table class="table table-bordered table-striped ls-table" >
                                            <thead>
                                                <tr>
                                                    <th>
                                                        التعهد
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Num)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Subject)
                                                    </th>
                                                    <th>
                                                        الهيكل
                                                    </th>
                                                    <th>
                                                         تحديد
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody >
                                                <center>
                                                @foreach (var item in Model) {
                                                    <tr >
                                                        
                                                        <td >
                                                            @Html.DisplayFor(modelItem => item.ProDate)
                                                        </td>
                                                        <td >
                                                            @Html.DisplayFor(modelItem => item.Num)
                                                        </td>
                                                        <td >
                                                            @item.Subject.ToString().Substring(0, (item.Subject.Length > 70) ? 70 : item.Subject.Length ) ...
                                                        </td>
                                                        <td >
                                                            @item.Commission.Lbl.ToString().Substring(0, (item.Commission.Lbl.Length > 35) ? 35 : item.Commission.Lbl.Length ) ...
                                                        </td>
                                                        <td>
                                                            <a asp-action="Select"  asp-controller="Doc" asp-route-id="@item.ID"><i class="fa fa-check"></i></a> 
                                                        </td>
                                                        
                                                    </tr>
                                                    
                                                }
                                                </center>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

@section Styles {
    @{ await Html.RenderPartialAsync("_TableStylePartial");}
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_TableScriptPatialWithout"); }
}



