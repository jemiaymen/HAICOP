@model HAICOP.Models.Dossier


<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="Doc" asp-action="Delete" method="post" >


        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="ID" class="form-field__label">المعرف الوحيد</label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="ID" class="form-field__input form-field__input--text" required="required"/>
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
        </div>


        <div class="form-field__button">
            <button class="button button--primary" type="submit">حذف</button>
        </div>


    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


