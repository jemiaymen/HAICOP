@using System.Linq
@model IEnumerable<HAICOP.Models.FourInDossier>

@{
    ViewData["Title"] = "القائمة الجملية للمزودين";
    ViewData["SubMenu"] = "التصرف في الملفات";
}

                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@ViewData["Title"]</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="ls-editable-table table-responsive ">
                                        <table class="table table-bordered table-striped ls-table" >
                                            <thead>
                                                <tr>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Dossier.Subject)
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Dossier.Commission.Lbl)
                                                    </th>
                                                    
                                                    <th>
                                                            صاحب الصفقة
                                                    </th>

                                                    <th>
                                                         الأقساط
                                                    </th>
                                                    <th>
                                                         المبلغ
                                                    </th>
                                                    <th>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model) {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Dossier.Subject)
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Dossier.Commission.Lbl)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Fournisseur.Lbl)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Lbl)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Montant)
                                                        </td>
                                                        <td>
                                                            <a asp-action="EditFour" asp-route-fid="@item.FournisseurID" asp-route-did="@item.DossierID"><i class="fa fa-pencil"></i></a> 
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


@section Styles {
    @{ await Html.RenderPartialAsync("_TableStylePartial");}
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_TableScriptPartial"); }
}



