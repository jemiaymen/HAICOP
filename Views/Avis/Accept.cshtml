@model HAICOP.Models.Dossier


<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="Avis" asp-action="Accept" method="post" novalidate="" data-form="true" data-parsley-focus="none">
        
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="Num" />



        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label class="form-field__label">الهيكل</label>
            </div>
            <div class="grid__column grid__column--10">
                <textarea class="form-field__input form-field__input--text" readonly="readonly">@Model.Commission.Lbl</textarea>
            </div>
        </div>



        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Subject" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--10">
                <textarea asp-for="Subject" class="form-field__input form-field__input--text" readonly="readonly"></textarea>
            </div>
        </div>

        <div class="form-field__button">
            <button class="button button--primary-2" type="submit">مصادقة</button>
        </div>


    </form>

</div>