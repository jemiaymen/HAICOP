
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


        <div class="tab-pane" id="profileTab">
            <div class="setting-box">    
                @if (SignInManager.IsSignedIn(User))
                {
                    ViewBag.user = (ApplicationUser) await UserManager.GetUserAsync(User);
                    <h3 class="ls-header">@UserManager.GetUserName(User)</h3>
                    <div class="setting-box-content">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">تغير المعطيات الشخصية</h3>
                            </div>
                            <div class="panel-body">
                                <form role="form" class="ls_form" asp-controller="Account" asp-action="EditProfile" method="post" id="changeprofileform" >
                                    <input id="UserId" name="UserId" type="hidden" value="@UserManager.GetUserId(User)" />

                                    <div class="form-group">
                                        <label>البريد الإلكتروني</label>
                                        <input id="Email" name="Email"  class="form-control" value="@ViewBag.user.Email">
                                    </div>

                                    <div class="form-group">
                                        <label>اسم المستخدم</label>
                                        <input id="UserName" name="UserName"  class="form-control" value="@ViewBag.user.UserName">
                                    </div>

                                    <div class="form-group">
                                        <label>الإسم واللقب</label>
                                        <input id="FirstLastName" name="FirstLastName"  class="form-control" value="@ViewBag.user.FirstLastName">
                                    </div>

                                    
                                    <div class="form-group">
                                        <button class="btn btn-lg btn-success " type="submit">تغيير</button>
                                    </div>
                                </form>
                            </div>
                        </div>    
                    </div>
                   
                }
                else 
                {
                    <h3 class="ls-header">هناك خطأ</h3>
                }
                
                
            </div>       
        </div>