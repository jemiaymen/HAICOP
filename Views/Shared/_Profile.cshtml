
@using Microsoft.AspNetCore.Identity
@using HAICOP.Models


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model HAICOP.Models.AccountViewModels.ChangeProfile

        <div class="tab-pane" id="profileTab">
            <div class="setting-box">
                
                @if (SignInManager.IsSignedIn(User))
                {
                    ViewBag.user = (ApplicationUser) await UserManager.GetUserAsync(User);
                   
                }
                else 
                {
                    <h3 class="ls-header">هناك خطأ</h3>
                }
                
                <div class="setting-box-content">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">تغير المعطيات الشخصية</h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" class="ls_form" asp-controller="Account" asp-action="EditProfile" method="post" id="changeprofileform" >
                                <input asp-for="UserId" type="hidden" value="@UserManager.GetUserId(User)" />

                                <div class="form-group">
                                    <label asp-for="Email" ></label>
                                    <input asp-for="Email"  class="form-control" value="@ViewBag.user.Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="UserName" ></label>
                                    <input asp-for="UserName"  class="form-control" value="@ViewBag.user.UserName">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="FirstLastName" ></label>
                                    <input asp-for="FirstLastName"  class="form-control" value="@ViewBag.user.FirstLastName">
                                    <span asp-validation-for="FirstLastName" class="text-danger"></span>
                                </div>

                                
                                <div class="form-group">
                                    <button class="btn btn-lg btn-success " type="submit">تغيير</button>
                                </div>
                            </form>
                        </div>
                    </div>    
                </div>
            </div>       
        </div>