@model HAICOP.Models.OJ


<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="OJ" asp-action="Edit" method="post">
        <input type="hidden" asp-for="ID" />


        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Num" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="Num" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Num" class="text-danger"></span>
            </div>
        </div>

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Year" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="Year" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
        </div>

        <div class="form-field__button">
            <button class="button button--secondary" type="submit">تحيين</button>
        </div>


    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

