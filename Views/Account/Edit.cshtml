@model HAICOP.Models.AccountViewModels.EditProfileViewModel
<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="Account" asp-action="Edit" method="post">

        <input asp-for="UserId" type="hidden" />

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="UserName" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="UserName" class="form-field__input form-field__input--text" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="FirstLastName" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="FirstLastName" class="form-field__input form-field__input--text" />
                <span asp-validation-for="FirstLastName" class="text-danger"></span>
            </div>
        </div>


        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Email" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="Email" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="Role" class="form-field__label"></label>
            </div>
            <div class="grid__column grid__column--4">
                <span class="form-field__input-wrapper form-field__input-wrapper--select">
                    <select asp-for="Role" asp-items="ViewBag.Role" class="form-field__input form-field__input--select">

                    </select>
                </span>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>



        <div class="form-field__button">
            <button class="button button--secondary" type="submit">تحيين</button>
        </div>


    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
