<body id="page">
    <!--[if lte IE 8]>
        <div class="browserupgrade">
            <div class="grid browserupgrade__grid-row">
                <div class="grid__column grid__column--12">
                        <p dir="rtl" class="browserupgrade__message">المتصفح قديم. الرجاء القيام بترقية المتصفح للاستخدام الأمثل للموقع.</p>
                </div>
            </div>
        </div>
    <![endif]-->





    <div id="rs_area" class="grid">
        <div class="grid__row">
            <div class="grid__column grid__column--12">
                <div class="m26-page-title title_message">

                    <h1 class="text__page-title">الدخول إلى حسابي</h1>
                </div>
            </div>
        </div>



        <div class="grid">

            <div class="grid__row">
                <div class="grid__column grid__column--12 grid__column--form">
                    <form asp-action="Login" asp-controller="Account" class="form" method="post">

                        <fieldset class="fieldset">
                            <legend class="legend-color">.</legend>
                            <div class="form-field form-field--text">
                                <label for="Email" class="form-field__label">
                                    اسم المستخدم

                                </label>
                                <span class="form-field__input-wrapper">
                                    <input asp-for="Email" class="form-field__input form-field__input--text" placeholder="اسم المستخدم" />
                                </span>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>
                            <div class="form-field form-field--text">
                                <label for="form-field-login-main-password" class="form-field__label">
                                    كلمة المرور

                                </label>
                                <span class="form-field__input-wrapper">
                                    <input asp-for="Password" class="form-field__input form-field__input--text"  />
                                </span>
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                        </fieldset>
                        <div class="form-field__button">
                            <button id="loginButton" type="submit" class="button button--primary" data-submission-text="جاري الدخول...">دخول</button>
                        </div>
                    </form>
                    <ul class="form-links">
                        <li class="form-links__item"><a href="forgot-password.html" class="form-links__link">نسيت كلمة المرور؟</a></li>
                        <li class="form-links__item"><a href="forgot-username.html" class="form-links__link">هل فقدت اسم المستخدم؟</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


</body>
</html>