@model HAICOP.Models.UserCommission


@{
    ViewData["Title"] = "اظافة لجنة";
    ViewData["SubMenu"] = "التصرف في المستعملين";
}

<div class="panel panel-default">
    <div class="panel-heading">
         <h3 class="panel-title">@ViewData["Title"]</h3>
    </div>
    <div class="panel-body">
        <form asp-action="AddComm"  method="post" >
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="col-md-3 control-label">اللجنة</label>
                    <div class="col-md-9">
                        <select asp-for="CommissionID" class ="form-control" asp-items="ViewBag.CommissionID"></select>
                    </div>
                </div>
                <input type="hidden" asp-for="UserID" />

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn ls-light-blue-btn">اظافة</button>
                    </div>
                </div>
            </div>  
        </form>                            
    </div>
</div>


@section Scripts {
    @{ 
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
        await Html.RenderPartialAsync("_SelectizeScript"); 
        <script>
            $("#CommissionID").selectize();
        </script>
    }
}

@section Styles {
    @{ await Html.RenderPartialAsync("_SelectizeStyle");}
}