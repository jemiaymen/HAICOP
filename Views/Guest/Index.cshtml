@model IEnumerable<HAICOP.Models.Guest>

<div class="grid">

    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>


    <div class="grid__row">
        <table class="m23-table__content-table ls-table" >
            <thead class="m23-table__content-table-header">
                <tr class="m23-table__content-table-row">
                    <th class="m23-table__content-table-cell--header ">
                        @Html.DisplayNameFor(model => model.FirstLastName)
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th class="m23-table__content-table-cell--header ">
                        @Html.DisplayNameFor(model => model.Tel)
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        @Html.DisplayNameFor(model => model.Fix)
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        المشتري العمومي
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        تحيين
                    </th>
                </tr>
            </thead>
            <tbody class="m23-table__content-table-body">

                @foreach (var item in Model)
                {
                    <tr class="m23-table__content-table-row ">
                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.FirstLastName)
                        </td>
                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Tel)
                        </td>

                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Fix)
                        </td>
                        <td class="m23-table__content-table-cell">
                            @foreach(GuestInAcheteur i in ViewBag.Acheteur)
                            {
                                @if(i.GuestID == item.ID)
                                {
                                    @i.Acheteur.Lbl
                                }
                            }
                         </td>
                        <td class="m23-table__content-table-cell">
                            <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-pencil"></i></a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


@section Styles {
    @{
        await Html.RenderPartialAsync("_TableStyle");
        await Html.RenderPartialAsync("_FontAwesome");
    }
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_TableScript"); }
}


