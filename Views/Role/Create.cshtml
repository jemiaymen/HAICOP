@model HAICOP.Models.ApplicationRole


@{
    ViewData["Title"] = "القائمة الجملية";
    ViewData["SubMenu"] = "التصرف في حقوق المستعملين";
}


<div class="panel panel-default">
    <div class="panel-heading">
         <h3 class="panel-title">اظافة حق مستعمل</h3>
    </div>
    <div class="panel-body">
        <form asp-controller="Role" asp-action="Create"  method="post" >
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="NormalizedName" type="hidden" />
                <input asp-for="ConcurrencyStamp" type="hidden" />
                <div class="form-group">
                    <label class="col-md-3 control-label"> الإسم</label>
                    <div class="col-md-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-md-3 control-label"> توضيح عام</label>
                    <div class="col-md-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" class="btn ls-light-blue-btn">اظافة</button>
                    </div>
                </div>
            </div>  
        </form>                            
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

