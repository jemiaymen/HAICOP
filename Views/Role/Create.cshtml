@model HAICOP.Models.ApplicationRole



<div class="grid">
    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>

    <form class="form" asp-controller="Role" asp-action="Create" method="post" novalidate="" data-form="true" data-parsley-focus="none">

        <input asp-for="NormalizedName" type="hidden" />
        <input asp-for="ConcurrencyStamp" type="hidden" />

        <div class="grid__row">
            <div class="grid__column grid__column--2">
                <label asp-for="Name" class="form-field__label">الإسم</label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="Name" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="grid__column grid__column--2">
                <label asp-for="Description" class="form-field__label"> توضيح عام</label>
            </div>
            <div class="grid__column grid__column--4">
                <input asp-for="Description" class="form-field__input form-field__input--text" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>


        <div class="form-field__button">
            <button class="button button--primary" type="submit">إضافة</button>
        </div>


    </form>

</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

