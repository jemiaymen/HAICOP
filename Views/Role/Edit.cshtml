@model HAICOP.Models.ApplicationRole




@{
    ViewData["Title"] = "تحيين  حقوق المستعملين";
    ViewData["SubMenu"] = "التصرف في حقوق المستعملين";
}


<div class="panel panel-default">
    <div class="panel-heading">
         <h3 class="panel-title">تحيين  حقوق المستعملين </h3>
    </div>
    <div class="panel-body">
        <form asp-action="Edit" asp-controller="Role" method="post" >
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-md-3 control-label"> الإسم</label>
                    <div class="col-md-9">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-md-3 control-label"> توضيح عام</label>
                    <div class="col-md-9">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="NormalizedName" />
                <input type="hidden" asp-for="ConcurrencyStamp" />

                
                <div class="form-group">
                        <div class="col-md-offset-3 col-md-8">
                            <button type="submit" class="btn ls-light-green-btn">تحيين</button>
                        </div>
                    </div>
            </div>
        </form>                          
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
