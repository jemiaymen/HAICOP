@using System.Linq
@model IEnumerable<HAICOP.Models.DocDetail>

<div class="grid">

    <div class="grid__row">
        <div class="grid__column grid__column--12">
            <div class="m26-page-title title_message">
                <h1 class="text__page-title">@ViewBag.Menu</h1>
            </div>
        </div>
    </div>


    <div class="grid__row">
        <table class="m23-table__content-table ls-table" style="font-weight: lighter;">
            <thead class="m23-table__content-table-header">
                <tr class="m23-table__content-table-row">
                    <th class="m23-table__content-table-cell--header ">
                        التعهد
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        @Html.DisplayNameFor(model => model.Dossier.Num)
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        المشتري العمومي
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        @Html.DisplayNameFor(model => model.Dossier.Subject)
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        الهيكل
                    </th>

                    <th class="m23-table__content-table-cell--header ">
                        المقرر
                    </th>


                    <th class="m23-table__content-table-cell--header ">
                        صاحب الصفقة
                    </th>
                    <th class="m23-table__content-table-cell--header ">
                        اجابة
                    </th>
                    <th class="m23-table__content-table-cell--header "></th>
                </tr>
            </thead>
            <tbody class="m23-table__content-table-body">

                @foreach (var item in Model)
                {
                    var ID = item.Dossier.ID;
                    <tr class="m23-table__content-table-row ">
                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Dossier.ProDate)
                        </td>
                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Dossier.Num)
                        </td>
                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Acheteur.Lbl)
                        </td>
                        <td class="m23-table__content-table-cell">
                            @item.Dossier.Subject
                        </td>

                        <td class="m23-table__content-table-cell">
                            @item.Commission.Lbl
                        </td>

                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Rapporteur.Name)
                        </td>



                        <td class="m23-table__content-table-cell">
                            @foreach (var f in item.Fournisseurs)
                            {
                                <p> @f.Lbl </p>
                            }
                        </td>
                        <td class="m23-table__content-table-cell">
                            @Html.DisplayFor(modelItem => item.Dessision.Lbl)
                        </td>
                        <td class="m23-table__content-table-cell">
                            <a asp-action="Select" asp-controller="Doc" asp-route-id="@item.Dossier.ID"><i class="fa fa-check"></i></a>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


@section Styles {
    @{
        await Html.RenderPartialAsync("_TableStyle");
        await Html.RenderPartialAsync("_FontAwesome");
    }
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_TableScript"); }
}


