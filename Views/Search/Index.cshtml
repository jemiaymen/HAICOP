@using System.Linq
@model IEnumerable<HAICOP.Models.DocDetail>

@{
    ViewData["Title"] = "البحث";
    ViewData["SubMenu"] = "البحث";
}

                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@ViewData["Title"]</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="ls-editable-table table-responsive ">
                                        <table class="table table-bordered table-striped ls-table" >
                                            <thead>
                                                <tr>
                                                    <th>
                                                        التعهد
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Dossier.Num)
                                                    </th>
                                                    <th>
                                                        المشتري العمومي
                                                    </th>
                                                    <th>
                                                        @Html.DisplayNameFor(model => model.Dossier.Subject)
                                                    </th>
                                                    <th>
                                                        الهيكل
                                                    </th>

                                                    <th>
                                                        المقرر
                                                    </th>

                                                    
                                                    <th>
                                                        صاحب الصفقة
                                                    </th>
                                                    <th>
                                                        اجابة
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model) {
                                                   var ID = item.Dossier.ID ;
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Dossier.ProDate)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Dossier.Num)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Acheteur.Lbl)
                                                        </td>
                                                        <td>
                                                            @item.Dossier.Subject.ToString().Substring(0, (item.Dossier.Subject.Length > 50) ? 50 : item.Dossier.Subject.Length ) ...
                                                        </td>

                                                        <td>
                                                            @item.Commission.Lbl.ToString().Substring(0, (item.Commission.Lbl.Length > 25) ? 25 : item.Commission.Lbl.Length ) ...
                                                        </td>

                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Rapporteur.Name)
                                                        </td>

                                                        

                                                        <td>
                                                            @foreach(var f in item.Fournisseurs){
                                                                <p> @f.Lbl </p>
                                                            }
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Dessision.Lbl)
                                                        </td>
                                                        <td>
                                                            @Html.ActionLink("كل العطيات", "Detail", "Search",  new { id = item.Dossier.ID}) 
                                                        </td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

@section Styles {
    @{ await Html.RenderPartialAsync("_TableStylePartial");}
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_TableScriptPatialWithout"); }
}



