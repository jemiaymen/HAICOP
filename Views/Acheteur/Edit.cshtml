@model HAICOP.Models.Acheteur

@{
    ViewData["Title"] = "تحيين المشتري العمومي";
    ViewData["SubMenu"] = "التصرف فالثوابت";
}

<div class="panel panel-default">
    <div class="panel-heading">
         <h3 class="panel-title">@ViewData["Title"] </h3>
    </div>
    <div class="panel-body">
        <form asp-action="Edit" asp-controller="Acheteur" method="post" >
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="col-md-3 control-label" asp-for="Lbl" > </label>
                    <div class="col-md-9">
                        <input asp-for="Lbl" class="form-control" />
                        <span asp-validation-for="Lbl" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LblLong" class="col-md-3 control-label" > </label>
                    <div class="col-md-9">
                        <input asp-for="LblLong" class="form-control" />
                        <span asp-validation-for="Lbl" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                        <div class="col-md-offset-3 col-md-8">
                            <button type="submit" class="btn ls-light-green-btn">تحيين</button>
                        </div>
                    </div>
            </div>
        </form>                          
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

