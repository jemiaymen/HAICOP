@using System.Linq
@model IEnumerable<HAICOP.Models.Commission>

@{
    ViewData["Title"] = "القائمة الجملية الهياكل";
    ViewData["SubMenu"] = "التصرف فالثوابت";
}

                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">@ViewData["Title"]</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="ls-editable-table table-responsive ">
                                        <table class="table table-bordered table-striped ls-table" >
                                            <thead>
                                                <tr>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Lbl)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.LblFr)
                                                        </th>
                                                        <th>
                                                            @Html.DisplayNameFor(model => model.Code)
                                                        </th>
                                                        <th>
                                                            رئيس الهيكل
                                                        </th>
                                                        <th>
                                                            تحيين
                                                        </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model) {
                                                        <tr>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Lbl)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.LblFr)
                                                            </td>
                                                            <td>
                                                                @Html.DisplayFor(modelItem => item.Code)
                                                            </td>

                                                            <td>
                                                                @if( item.HavePresident){
                                                                    @Html.DisplayFor(modelItem => item.Agents.First(a => a.IsPresident == true).Name)
                                                                }
                                                            </td>
                                                            <td>
                                                                 <a asp-action="Edit" asp-route-id="@item.ID"><i class="fa fa-pencil"></i></a>
                                                            </td>
                                                        </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


@section Styles {
    @{ await Html.RenderPartialAsync("_TableStylePartial");}
}

@section Scripts {
    @{ await Html.RenderPartialAsync("_TableScriptPartial"); }
}


